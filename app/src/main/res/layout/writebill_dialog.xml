<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_kuang_pink"
        android:padding="5dp"
        android:text="发票抬头"
        android:textColor="#000"
        android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/rg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人"
            android:textColor="#000"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/rb_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位"
            android:textColor="#000"
            android:textSize="18sp"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_kuang_pink"
        android:padding="5dp"
        android:text="发票抬头"
        android:textColor="#000"
        android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/rg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图书"
            android:textColor="#000"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/rb_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音响"
            android:textColor="#000"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/rb_content_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏"
            android:textColor="#000"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/rb_content_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件"
            android:textColor="#000"
            android:textSize="18sp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_kuang_pink"
        android:gravity="center"
        android:padding="5dp"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="20sp"/>

</LinearLayout>