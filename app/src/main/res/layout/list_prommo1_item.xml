<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_prommoitem1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_toRightOf="@id/iv_deseno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_prommoitem1_name1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="粉色毛衣"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_prommoitem1_name2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="原价300"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:text="买一送一娃娃"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#f00">

            <TextView
                android:id="@+id/tv_prommoitem1_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20sp"/>

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/tv_prommoitem1_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马上抢"
                android:textSize="20sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>