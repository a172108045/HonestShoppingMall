<?xml version="1.0" encoding="utf-8"?>

    <com.song.honestshoppingmall.view.MySlideMenu
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:rightPadding="100dp"
      >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <include layout="@layout/layout_menu" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"/>

                    <EditText
                        android:id="@+id/et_serch2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_search_etbg"/>

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:text="取消"
                        android:textColor="#000"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <RadioGroup
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:button="@null"
                            android:background="@drawable/selector_btn_bg"
                            android:text="销量"
                            android:id="@+id/btn_sales_volume"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"/>

                        <RadioButton
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_btn_bg"
                            android:text="价格"
                            android:id="@+id/btn_sales_price"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"/>

                        <RadioButton
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_btn_bg"
                            android:text="时间"
                            android:id="@+id/btn_sales_time"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"/>

                        <RadioButton
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_btn_bg"
                            android:text="评价"
                            android:id="@+id/btn_sales_evaluate"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"/>

                    </RadioGroup>
                    <Button
                        android:background="@drawable/select_btn_order_bg"
                        android:text="筛选"
                        android:id="@+id/btn_sales_filtrate"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_searchdetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>

    </com.song.honestshoppingmall.view.MySlideMenu>

