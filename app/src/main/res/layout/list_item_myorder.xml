<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_id_item_myorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号:20170101"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_price_item_myorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单总额:¥ 200.0"
            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_date_item_myorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-01-08 21:26:08"
            android:textSize="18sp"
            android:textColor="#000"/>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_state_item_myorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态:未处理"
        android:textSize="18sp"
        android:textColor="#000"/>




</LinearLayout>